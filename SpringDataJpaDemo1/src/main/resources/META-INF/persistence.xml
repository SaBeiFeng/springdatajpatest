<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <!--持久化单元配置
    name:持久化单元名称
    transaction-type:事务模式。 RESOURCE_LOCAL：本地事务 JTA：分布式事务
    -->
    <persistence-unit name="myJpa" transaction-type="RESOURCE_LOCAL">
        <!--配置 JPA 提供商-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!--连接数据库配置-->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/test"/>
            <!--jpa 实现方的配置-->
            <!--是否打印 sql 语句-->
            <property name="hibernate.show_sql" value="true"/>
            <!--是否格式化 sql 语句-->
            <property name="hibernate.format_sql" value="true"/>
            <!--是否自动创建数据库表
            可选值： create、 update、 none
            create：程序自动创建数据库表，如果表存在则先删除后创建,只适用于测试环境
            update：程序自动创建数据库表，如果表存在则不创建。表结构与映射不一致会自动修改表结构,这种修改是增量的,在表中增加了映射不一致的字段进行匹配.
                    适用于开发环境,但是不适用于生产环境
            validate:校验表结构,不创建或者修改表,在Hibernate启动时会校验表结构是否与映射一致,不一致抛出异常,适用于正式环境
            none:不会创建表,相当于不配置,可以用于正式环境
            -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>